<div class="h1 text-center mb-5">
  Minesweeper boards
</div>

<div class="container">
  <div class="row">
    <div>
      <div class="text-left btn-lg col">
        <%= link_to "New Board", new_board_path, class: "btn btn-primary"%>
      </div>
    </div>
    <div class="card mt-2 w-75 m-auto col">
      <div class="card-body">
        <% @boards.each do |board| %>
          <div class="container">
            <div class="row">
              <div class="h4 col">
                <p class="small">Name: <%= link_to board.name, board_path(board) %></p>
              </div>
              <div class="col">
                <%= board.created_at.to_formatted_s(:db)  %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>